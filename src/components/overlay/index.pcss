.overlay {
    --zIndex-overlay: var(--zIndex-7);
    position: fixed;
    z-index: var(--zIndex-overlay);
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
}

.overlay::before {
    content: "";
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    opacity: .9;
    background-color: #282e32;
}